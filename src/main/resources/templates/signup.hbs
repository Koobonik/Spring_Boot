<!-- 회원가입 영역 -->
<div class="modal-body">
    <form>
        <div class="form-group">
            <label for="title"> 아이디 </label>
            <input type="text" class="form-control" id="userid" placeholder="ID"> <!-- 유저 아이디 -->
        </div>
        <div class="form-group">
            <label for="author"> 비밀번호 </label>
            <input type="password" class="form-control" id="userpassword" onchange="check()" placeholder="Password"><!-- 비밀번호  2번 확인-->
        </div>
        <div class="form-group">
            <label for="author"> 비밀번호 확인 </label>
            <input type="password" class="form-control" id="userpassword2" onchange="check()" placeholder="Password Check"><!-- 비밀번호  2번 확인-->
        </div>
        <h4 id="same" onchange="check()"></h4>
        <div class="form-group">
            <label for="content"> 이메일 </label>
            <input type="email" class="form-control" id="useremail" placeholder="abcd1234@exam.com">
        </div>
    </form>
    <button style="position: absolute; right: 15px;" type="button" class="btn btn-primary" id="btn-save">회원 가입</button>
</div>

